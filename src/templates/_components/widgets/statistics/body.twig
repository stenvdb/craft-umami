{% set iconUrl = view.getAssetManager().getPublishedUrl('@stenvdb/umami/assetbundles/umami/dist', true) ~ '/img/Widget.svg' %}

<div class="fa--m-widget-spacing">
  <div class="fa-border-solid fa-border-b fa-border-gray-200 fa-p-widget-spacing">
    <h3 class="fa-leading-none fa-mb-0">
      <span class="fa-font-bold">{{ 'realtime'|t('umami')|ucfirst }} <span class="fa-text-craft-blue">{{ 'current'|t('umami') }}</span></span>
      <span class="fa-font-bold">{{ 'visitors'|t('umami') }}</span>
    </h3>
  </div>
  <div class="fa-px-widget-spacing fa-my-6 fa-font-bold fa-text-5xl fa-leading-none js-fa-realtime">&hellip;</div>
  <div class="fa-border-solid fa-border-b fa-border-t fa-border-gray-200 fa-p-widget-spacing">
    <h3 class="fa-leading-none fa-mb-0">
      <span class="fa-font-bold">{{ 'site'|t('umami')|ucfirst }} <span class="fa-text-craft-blue">{{ 'statistics'|t('umami') }}</span></span>
      <span class="fa-text-gray-500">
        {% if settings.period == 'year' %}
        {{ 'in het last'|t('umami') }}
        {% else %}
        {{ 'in the last'|t('umami') }}
        {% endif %}
      </span>
      <span class="fa-font-bold">{{ settings.period|t('umami')}}</span>
    </h3>
  </div>

  <div class="fa-px-widget-spacing fa-my-6">
    <div class="fa-mb-4">
      <span class="fa-font-bold fa-text-3xl fa-leading-none js-fa-unique-visitors">&hellip;</span>
      <div class="fa-font-bold fa-text-gray-500">{{ 'unique visitors'|t('umami')|ucfirst }}</div>
    </div>
    <div class="fa-mb-4">
      <span class="fa-font-bold fa-text-3xl fa-leading-none js-fa-pageviews">&hellip;</span>
      <div class="fa-font-bold fa-text-gray-500">{{ 'pageviews'|t('umami')|ucfirst }}</div>
    </div>
    <div class="fa-mb-4">
      <span class="fa-font-bold fa-text-3xl fa-leading-none js-fa-avg-time">&hellip;</span>
      <div class="fa-font-bold fa-text-gray-500">{{ 'avg time on site'|t('umami')|ucfirst }}</div>
    </div>
    <div class="">
      <span class="fa-font-bold fa-text-3xl fa-leading-none js-fa-bounce-rate">&hellip;</span>
      <div class="fa-font-bold fa-text-gray-500">{{ 'bounce rate'|t('umami')|ucfirst }}</div>
    </div>
  </div>

  <div class="fa-border-solid fa-border-t fa-border-gray-200 fa-flex fa-justify-end fa-items-end">
    <div class="fa-px-widget-spacing fa-py-4 fa-flex fa-items-center fa-text-xs">
      <span class="">powered by</span>
      <img src="{{ iconUrl }}" height="16" width="18" class="fa-mx-1" />
      <a href="https://umami.is/" target="_blank" class="fa-underline">umami</a>
    </div>
  </div>
</div>
