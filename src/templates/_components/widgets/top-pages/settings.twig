{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("stenvdb\\umami\\assetbundles\\umami\\UmamiAsset") %}

{% set periodOptions = [
  { label: 'week'|t('umami')|title, value: 'week' },
  { label: 'month'|t('umami')|title, value: 'month' },
  { label: 'year'|t('umami')|title, value: 'year' }
] %}

{{ forms.selectField({
  label: 'period'|t('umami')|title,
  name: 'period',
  options: periodOptions,
  value: settings.period,
}) }}
